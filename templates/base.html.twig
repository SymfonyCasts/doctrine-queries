<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Fortune Queries{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="navbar-like">
            <form class="navbar-form" role="search" style="position: absolute; right: 20px;" action="{{ path('app_homepage') }}">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search ..." name="q">
                </div>
            </form>

            <a href="{{ path ('app_homepage') }}">
                <img class="logo center-block" src={{ asset('build/images/fortune-logo.png') }}>
            </a>
        </div>
        {% block body %}{% endblock %}
        <footer class="footer">
            <div class="container">
                <p class="pull-left knpu">Brought to you with <i class="fas fa-heart knp-heart"></i> from <a href="https://symfonycasts.com/">SymfonyCasts</a></p>
                <div class="social-icons">
                    <a class="btn btn-social-icon btn-twitter" href="https://twitter.com/SymfonyCasts"><i class="fa-brands fa-twitter"></i></a>
                    <a class="btn btn-social-icon btn-facebook" href="https://www.facebook.com/SymfonyCasts"><i class="fa-brands fa-facebook"></i></a>
                    <a class="btn btn-social-icon btn-github" href="https://github.com/SymfonyCasts"><i class="fa-brands fa-github"></i></a>
                </div>
            </div>
        </footer>
    </body>
</html>
